{
    "schemaVersion": 1,
    "id": "easierchests",
    "version": "${version}",
    "environment": "client",
    "entrypoints": {
        "client": [ "de.guntram.mcmod.easierchests.EasierChests" ],
        "modmenu": [ "de.guntram.mcmod.easierchests.MMConfigurationHandler" ]
    },
    "custom": {
        "modupdater": {
            "strategy": "json",
            "url": "https://raw.githubusercontent.com/gbl/ModVersionInfo/master/EasierChests.json"
        }
    },
    "mixins": [
        "mixins.easierchests.json"
        , "mixins.easierchests_debug.json"
    ],
    "depends": {
        "fabric-api": "*",
	"gbfabrictools": ">=1.4+1.20"
    },
    "recommends": {
      "modmenu" : "*"
    },    
    "name": "EasierChests",
    "description": "Move stuff between inventory and chests, and sort them",
    "icon": "icon.png",
    "authors": [ "Giselbaer" ],
    "contact": {
        "homepage": "https://minecraft.curseforge.com/projects/easierchests",
        "sources": "https://github.com/gbl/EasierChests/",
        "issues": "https://github.com/gbl/EasierChests/issues"
    }
}
